{
    "name":        "nukacode/core",
    "description": "A core set of features for laravel sites.",
    "license":     "MIT",
    "authors":     [
        {
            "name":  "Stygian",
            "email": "stygian.warlock.v2@gmail.com"
        },
        {
            "name":  "Riddles",
            "email": "riddles@dev-toolbox.com"
        }
    ],
    "require": {
        "laravel/framework": "~5.0",
        "illuminate/html": "~5.0",
        "intervention/image": "2.0.9",
        "anlutro/curl": "0.6.0",
        "doctrine/dbal": "2.4.2",
        "laracasts/presenter": "0.2.0",
        "laracasts/commander": "1.4.1",
        "laracasts/flash": "1.3",
        "tlr/menu": "3.0.0"
    },
    "autoload":    {
        "classmap": [
            "src/database/migrations"
        ],
        "psr-4":    {
            "NukaCode\\Core\\": "src/NukaCode/Core"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "php artisan nuka:version"
        ],
        "post-update-cmd": [
            "php artisan nuka:version"
        ]
    },
    "minimum-stability": "dev"
}
